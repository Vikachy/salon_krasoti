<Page x:Class="salon_krasoti.Pages.PaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:salon_krasoti.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentsPage">
    <Grid Style="{StaticResource PageGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="DataGridPayments" 
                  AutoGenerateColumns="False" 
                  Style="{StaticResource ModernDataGrid}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID записи" Binding="{Binding AppointmentID}"/>
                <DataGridTextColumn Header="Услуга" Binding="{Binding Service.ServiceName}"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}"/>
                <DataGridTextColumn Header="Дата платежа" Binding="{Binding PaymentDate}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Content="Добавить" 
                    Style="{StaticResource CustomButtonStyle}"
                    Click="AddPayment_Click"
                    Width="150"/>
        </StackPanel>
    </Grid>
</Page>
