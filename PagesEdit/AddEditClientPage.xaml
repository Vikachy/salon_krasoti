<Page x:Class="salon_krasoti.PagesEdit.AddEditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:salon_krasoti.PagesEdit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditClientPage">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFD1D1" Offset="0"/>
                <GradientStop Color="#FFC4C4" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border CornerRadius="15" Background="White" Padding="20" Margin="30">
            <StackPanel>
                <TextBlock Text="Имя" Style="{StaticResource LabelStyle}" />
                <TextBox x:Name="FirstNameTextBox" Style="{StaticResource TextBoxStyle}" />
                <TextBlock Text="Фамилия" Style="{StaticResource LabelStyle}" />
                <TextBox x:Name="LastNameTextBox" Style="{StaticResource TextBoxStyle}" />
                <TextBlock Text="Телефон" Style="{StaticResource LabelStyle}" />
                <TextBox x:Name="PhoneTextBox" Style="{StaticResource TextBoxStyle}" />
                <TextBlock Text="Email" Style="{StaticResource LabelStyle}" />
                <TextBox x:Name="EmailTextBox" Style="{StaticResource TextBoxStyle}" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Сохранить" Click="Save_Click" Style="{StaticResource ActionButtonStyle}" Margin="0,0,10,0" />
                    <Button Content="Отмена" Click="Cancel_Click" Style="{StaticResource CancelButtonStyle}"  />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
