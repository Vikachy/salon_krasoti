<Page x:Class="salon_krasoti.Pages.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:salon_krasoti.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesPage">

    <Grid Style="{StaticResource PageGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="DataGridSales" 
                  AutoGenerateColumns="False" 
                  Style="{StaticResource ModernDataGrid}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employee.FullName}"/>
                <DataGridTextColumn Header="Услуга" Binding="{Binding Service.ServiceName}"/>
                <DataGridTextColumn Header="Дата продажи" Binding="{Binding SaleDate}"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding QuantitySold}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 15">
            <Button Content="Добавить" 
                    Style="{StaticResource ActionButtonStyle}"
                    Click="AddSale_Click"/>
        </StackPanel>
    </Grid>
</Page>
